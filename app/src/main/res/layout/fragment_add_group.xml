<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.guruhlar.AddGroupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFB800"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/yangi_guruh_qo_shish"
                android:textColor="#1A4E79"
                android:textSize="@dimen/_18ssp" />
        </LinearLayout>

        <EditText
            android:id="@+id/groupName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edt_style_1"
            android:hint="@string/guruh_nomi"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="#1A4E79"
            android:textColorHint="#B1ACAC"
            android:textSize="@dimen/_20ssp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edt_style_1">

            <Spinner
                android:id="@+id/spinnerMentor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp" />

            <TextView
                android:id="@+id/courseMentor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="47dp"
                android:layout_marginBottom="1dp"
                android:background="#E2DFDF"
                android:gravity="center_vertical"
                android:hint="@string/mentorni_tanlang"
                android:paddingStart="10dp"
                android:paddingEnd="1dp"
                android:textColor="#1A4E79"
                android:textColorHint="#B1ACAC"
                android:textSize="@dimen/_20ssp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edt_style_1">

            <Spinner
                android:id="@+id/spinnerTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp" />

            <TextView
                android:id="@+id/courseTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="47dp"
                android:layout_marginBottom="1dp"
                android:background="#E2DFDF"
                android:gravity="center_vertical"
                android:hint="@string/vaqti"
                android:paddingStart="10dp"
                android:paddingEnd="1dp"
                android:textColor="#1A4E79"
                android:textColorHint="#B1ACAC"
                android:textSize="@dimen/_20ssp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/edt_style_1">

            <Spinner
                android:id="@+id/spinnerDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp" />

            <TextView
                android:id="@+id/courseDay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="47dp"
                android:layout_marginBottom="1dp"
                android:background="#E2DFDF"
                android:gravity="center_vertical"
                android:hint="@string/kunlari"
                android:paddingStart="10dp"
                android:paddingEnd="1dp"
                android:textColor="#1A4E79"
                android:textColorHint="#B1ACAC"
                android:textSize="@dimen/_20ssp" />
        </FrameLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnSave"
        android:layout_width="135dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="15dp"
        android:backgroundTint="#FFB800"
        app:cardCornerRadius="5dp"
        app:cardElevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@string/saqlash"
            android:textColor="#1A4E79"
            android:textSize="17sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>